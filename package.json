{
  "name": "alliage-rest-api",
  "version": "0.0.1",
  "description": "Alliage module to easily build REST APIs",
  "main": "index.js",
  "repository": "git@github.com:TheHumbleJester/alliage-rest-api.git",
  "author": "The Humble Jester <the.humble.jester@gmail.com>",
  "license": "MIT",
  "scripts": {
    "download-openapi-schema": "sh scripts/download-openapi-schema.sh",
    "postinstall": "yarn download-openapi-schema",
    "lint": "eslint . --ext .ts",
    "test:integration": "NODE_ENV=test jest --maxWorkers=2 --rootDir=. -c ./integration-tests/jest.config.js",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsc -p tsconfig.json && cp package.json dist/package.json"
  },
  "alliageManifest": {
    "type": "module",
    "dependencies": [
      "alliage-builder",
      "alliage-config-loader",
      "alliage-di",
      "alliage-lifecycle",
      "alliage-process-manager",
      "alliage-module-installer",
      "alliage-webserver"
    ],
    "installationProcedures": {
      "copyFiles": [
        [
          "base-files/main-config.yaml",
          "config/rest-api.yaml"
        ],
        [
          "base-files/openapi-specs-config.yaml",
          "config/rest-api-openapi-specs.yaml"
        ]
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "alliage": "^1.1.0",
    "alliage-builder": "^1.2.0-pre1",
    "alliage-config-loader": "^1.2.0-pre1",
    "alliage-di": "^1.2.0-pre1",
    "alliage-lifecycle": "^1.2.0-pre1",
    "alliage-module-installer": "^1.2.0-pre1",
    "alliage-process-manager": "^1.2.0-pre1",
    "alliage-sandbox": "^1.0.0",
    "alliage-service-loader": "^1.2.0-pre1",
    "alliage-webserver": "^0.1.0-pre2",
    "alliage-webserver-express": "^0.1.0-pre2",
    "alliage-webserver-sandbox": "^0.1.0-pre1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "json-schema": "^0.4.0",
    "json-schema-to-ts": "^2.2.0",
    "json-schema-to-typescript": "^10.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.3"
  },
  "peerDependencies": {
    "alliage": "^1.1.0",
    "alliage-builder": "^1.2.0-pre1",
    "alliage-config-loader": "^1.2.0-pre1",
    "alliage-di": "^1.2.0-pre1",
    "alliage-lifecycle": "^1.2.0-pre1",
    "alliage-module-installer": "^1.2.0-pre1",
    "alliage-process-manager": "^1.2.0-pre1",
    "alliage-webserver": "^0.1.0-pre2"
  },
  "dependencies": {
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "lodash.clonedeep": "^4.5.0",
    "comment-parser": "^1.3.0",
    "path-to-regexp": "^6.2.0",
    "ts-morph": "^13.0.2"
  }
}
